            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <AutoCompleteTextView
                android:id="@+id/room_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_room_name"
                android:inputType="textShortMessage"
                android:maxLines="1"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/join_button"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="attemptJoin"
                android:src="@android:drawable/ic_menu_send"
                android:textStyle="bold" />
        </LinearLayout>-->
        <TextView
            android:id="@+id/join_chatroom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="attemptJoin"/>
        <ListView
            android:id="@+id/recent_chatRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_leftMenuWraper"
        android:padding="20dp"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#F0F0F0">

        <ImageView
            android:src="@drawable/more_icone_5844_96"
            android:id="@+id/drawer_profileImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            />

        <TextView
            android:text="User name"
            android:id="@+id/drawer_profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
        <TextView
            android:text="user email adderss"
            android:id="@+id/drawer_profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout >

